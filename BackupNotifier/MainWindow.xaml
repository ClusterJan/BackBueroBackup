<Window x:Class="BackupNotifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BackBüroBackup: Erinnerung" Height="170" Width="580" WindowStyle="ThreeDBorderWindow" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="570" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Margin="10,23,10,0"  Content="Erinnerung: Bitte machen Sie eine Datensicherung von der BackBüro Datenbank." FontSize="15" HorizontalAlignment="Stretch" VerticalAlignment="Top" />
        <Button x:Name="StartProgram" Grid.Row="1" Grid.Column="0" Content="Backup-Programm starten" FontSize="14" HorizontalAlignment="Stretch" Margin="5,5,5,5" Width="Auto" Click="StartProgram_Click"/> 
    </Grid>
</Window>
